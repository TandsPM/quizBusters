<a href="/views/quizzes" class="quiz-link">
<label for="individual-quiz" class="individual-quiz-title">
   <% const title = JSON.stringify(dashboard.quizData.rows[cardCounter].title) %>
   <%=  title %>
  </label>
  <br/>

  <label for="individual-quiz" class="individual-quiz-author">
    <%= (dashboard.quizData.rows[cardCounter].name) %>
  </label>
  <br/>

  <!-- // for loop to make questions  -->
  <% const questions = dashboard.questionsData.rows %>
  
  <% for (question of questions) { %>
    <% if (question.quiz_id === cardCounter+1) { %>
      <% console.log("question: ", question) %>
      <div class="quiz-card-container">
        <div class="quiz-content">
          <div class="question"> 
            <%= question.content %>
            
          </div>
      
          <fieldset>
            <div class="answer-options">

              <% let optionsCount = 0 %>
              <% const options = dashboard.optionsData.rows %>
              <% for (let i = 0; i < question.number_of_options; i++) { %>
                <% if (options.question_id === questions.id) { %>
                  <div class="answer-option">
                    <input type="radio" name="<%options[i].content%>" value="<%options[i].content%>" /> <%= options[i].content %>!
                  </div>
                  <% } %>
                <% console.log("option: ", options[i]) %>
              
              <% } %>
              <% optionsCount += question.number_of_options %>
          </fieldset>
          </div>
      
        </div>
        <div class="reactions">
          <div class="reaction"><i class="fa-regular fa-flag"></i></div>
          <div class="reaction"><i class="fa-solid fa-retweet"></i></div>
          <div class="reaction"><i class="fa-regular fa-heart"></i></div>
        </div>
      </div>
      <% } %>
  <% } %>


</a>
